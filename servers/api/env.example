# GCP 기본 설정
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-northeast3

# Vertex AI (Gemini)
VERTEX_AI_MODEL=gemini-2.5-flash

# Cloud Speech-to-Text
# Chirp 2 모델 (us-central1에서는 단일 언어만 지원)
SPEECH_LANGUAGE_CODES=ko-KR

# Cloud Storage
GCS_BUCKET_NAME=your-bucket-name

# BigQuery
BQ_DATASET_ID=knowledge_graph

# Redis (Memorystore)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# VPC (Cloud Run용)
VPC_CONNECTOR=

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Processing
STT_CHUNK_DURATION_MS=2000
EXTRACTION_BATCH_SIZE=3
MAX_CONCURRENT_EXTRACTIONS=3

# Timeouts
STT_TIMEOUT_SECONDS=30.0
EXTRACTION_TIMEOUT_SECONDS=60.0

# Feedback
ENABLE_FEEDBACK=true
FEEDBACK_IMPROVEMENT_THRESHOLD=3.0

