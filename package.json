{
  "name": "realtime-knowledge-graph",
  "version": "1.0.0",
  "description": "실시간 지식 그래프 다이어그래밍 서비스 모노레포",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:desktop": "yarn workspace @rkg/desktop dev",
    "build:desktop": "yarn workspace @rkg/desktop build",
    "dev:api": "cd servers/api && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build:shared": "yarn workspace @rkg/shared-types build",
    "build:graph-utils": "yarn workspace @rkg/graph-utils build",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf **/dist **/node_modules/.cache"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.0.2"
}


