{
  "name": "realtime-knowledge-graph-gcp",
  "version": "2.0.0",
  "description": "실시간 지식 그래프 다이어그래밍 서비스 - GCP 기반",
  "private": true,
  "scripts": {
    "dev:desktop": "cd apps/desktop && npm run dev",
    "build:desktop": "cd apps/desktop && npm run build",
    "dev:api": "cd servers/api && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf **/dist **/node_modules/.cache"
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
